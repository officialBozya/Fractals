<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fractals.App">
    <Application.Resources>
        <Style x:Key="baseButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Open Sans"/> 
            <Setter Property="TextColor" Value="#7A7A7A"/>
            <Setter Property="CornerRadius" Value="31"/> 
            <Setter Property="VerticalOptions" Value="CenterAndExpand"/> 
            <Setter Property="Margin" Value="20"/>
        </Style>

        <Style x:Key="normalButtonStyle" BaseResourceKey="baseButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#ffffff"/>
            <Setter Property="FontSize" Value="72"/>
        </Style>

        <Style x:Key="smallButtonStyle" BaseResourceKey="baseButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="BackgroundColor" Value="#ffffff"/>
            <Setter Property="VerticalOptions" Value="Start"/>
            <Setter Property="HorizontalOptions" Value="EndAndExpand"/>
        </Style>
    </Application.Resources>
</Application>